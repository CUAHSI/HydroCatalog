<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Odata" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="HISDataServiceWebRole" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="Connect" />
    </Imports>
    <LocalResources>
      <LocalStorage name="HISDataServiceWebRole.svclog" sizeInMB="1000" 
                    cleanOnRoleRecycle="false" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>